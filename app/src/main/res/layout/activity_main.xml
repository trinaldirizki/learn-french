<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:rowCount="6"
    android:columnCount="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.permana.learnfrench.MainActivity">

    <ImageView
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_rowWeight="2"
        android:layout_gravity="fill"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:src="@drawable/france"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/hello"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Hello"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/morning"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Good morning"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/afternoon"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Good afternoon"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/evening"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Good evening"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/night"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Good night"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/howareyou"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="1"
        android:layout_row="3"
        android:text="How are you?"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/good"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="0"
        android:layout_row="4"
        android:text="I am good"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/notgood"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="1"
        android:layout_row="4"
        android:text="I am not good"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/great"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="0"
        android:layout_row="5"
        android:text="I am great"
        />
    <Button
        android:onClick="clickPhrase"
        android:id="@+id/goodthank"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_column="1"
        android:layout_row="5"
        android:text="I am good. Thank you. How are you?"
        />
</GridLayout>
